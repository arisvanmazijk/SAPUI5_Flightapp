<mvc:View controllerName="sap.ui.softwaris.flightapp.controller.Booking" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Page title="{i18n>bookingPageTitle}" showNavButton="true" navButtonPress=".onNavBack">
		<f:SimpleForm layout="ResponsiveGridLayout">
			<f:content>
				<Label text="{i18n>bookTitle}"/>
				<RadioButtonGroup columns="2">
					<RadioButton text="{i18n>bookTitleMale}"/>
					<RadioButton text="{i18n>bookTitleFemale}"/>
				</RadioButtonGroup>
				<Label text="{i18n>bookFirstName}"/>
				<Input width="50%"/>
				<Label text="{i18n>bookLastName}"/>
				<Input width="50%"/>
				<Label text="{i18n>bookSpecialAssistance}"/>
				<RadioButtonGroup columns="2">
					<RadioButton text="{i18n>bookYes}"/>
					<RadioButton text="{i18n>bookNo}"/>
				</RadioButtonGroup>				
				<Label text="{i18n>bookAddress}"/>
				<Input width="50%"/>
				<Label text="{i18n>bookPostalCode}"/>
				<Input width="50%"/>
				<Label text="{i18n>bookCity}"/>
				<Input width="50%"/>
				<Label text="{i18n>bookCountryCode}"/>
				<Select width="50%" items="{countries>/Country}" >
					<core:Item text="{countries>Name} ({countries>Prefix})"/>
				</Select>
				<Label text="{i18n>bookPhone}"/>
				<Input width="50%"/>
				<Label text="{i18n>bookEmail}"/>
				<Input width="50%"/>				
				<Label/>
				<Button text="{i18n>bookFlightButton}" press=".bookFlight" width="15em"/>
			</f:content>
		</f:SimpleForm>
	</Page>
</mvc:View>