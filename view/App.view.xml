<mvc:View controllerName="sap.ui.softwaris.flightapp.controller.App" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
	<Shell>
		<SplitApp id="app">
			<masterPages>
				<Page title="{i18n>masterPageTitle}">
					<content>
						<mvc:XMLView viewName="sap.ui.softwaris.flightapp.view.Master"/>
					</content>
				</Page>
			</masterPages>
			<detailPages>
				<Page title="{i18n>detailPageTitle}">
					<content>
						<mvc:XMLView viewName="sap.ui.softwaris.flightapp.view.Detail"/>
					</content>
				</Page>
			</detailPages>
		</SplitApp>
	</Shell>
</mvc:View>