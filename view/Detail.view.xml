<mvc:View controllerName="sap.ui.softwaris.flightapp.controller.Detail" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Page title="{i18n>detailPageTitle}" showNavButton="true" navButtonPress=".onNavBack">
		<ObjectHeader responsive="true" fullScreenOptimized="true" intro="{ path: 'flights>CARRID', formatter: '.formatter.airlineText' }"
			title="{flights>CITYFROM} ({flights>AIRPFROM}) to {flights>CITYTO} ({flights>AIRPTO})">
			<attributes>
				<ObjectAttribute title="{i18n>departureTitle}" text="{flights>DEPTIME}"/>
				<ObjectAttribute title="{i18n>arrivalTitle}" text="{flights>ARRTIME}"/>
				<ObjectAttribute text="{i18n>localTimeText}"/>
			</attributes>
		</ObjectHeader>
	</Page>
</mvc:View>